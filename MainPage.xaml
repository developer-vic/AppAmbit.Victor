<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAmbit.Victor.MainPage"
             Title="AppAmbit SDK Test">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="AppAmbit SDK Test App"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Test analytics, logging, and crash reporting"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Label
                Text="Analytics Tests"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,10,0,5" />

            <Button
                x:Name="TrackEventBtn"
                Text="Track Sample Event" 
                SemanticProperties.Hint="Tracks a sample analytics event"
                Clicked="OnTrackEventClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="TrackEventWithPropsBtn"
                Text="Track Event with Properties" 
                SemanticProperties.Hint="Tracks an event with custom properties"
                Clicked="OnTrackEventWithPropsClicked"
                HorizontalOptions="Fill" />

            <Label
                Text="Logging Tests"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,20,0,5" />

            <Button
                x:Name="LogErrorBtn"
                Text="Log Error Message" 
                SemanticProperties.Hint="Logs an error message"
                Clicked="OnLogErrorClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="LogWarningBtn"
                Text="Log Warning Message" 
                SemanticProperties.Hint="Logs a warning message"
                Clicked="OnLogWarningClicked"
                HorizontalOptions="Fill" />

            <Label
                Text="Crash Tests"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,20,0,5" />

            <Button
                x:Name="TestCrashBtn"
                Text="Test Crash (App will restart)" 
                SemanticProperties.Hint="Tests crash reporting - app will crash and restart"
                Clicked="OnTestCrashClicked"
                HorizontalOptions="Fill"
                BackgroundColor="Red"
                TextColor="White" />

            <Label
                x:Name="StatusLabel"
                Text="Ready to test"
                FontSize="14"
                Margin="0,20,0,0"
                HorizontalOptions="Center"
                TextColor="Gray" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
